from flask import Flask

app = Flask(__name__)

@app.route("/")
def home():
    return "<h1>Welcome to my first Python website!</h1><p>This is the home page.</p>"

@app.route("/about")
def about():
    return "<h1>About</h1><p>This website is made using Flask.</p>"

@app.route("/hello/<name>")
def hello(name):
    return f"<h1>Hello, {name}!</h1>"

if __name__ == "__main__":
    app.run(debug=True)
